
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/placid_asia/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("user")
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Product {
  id           String   @id @default(cuid())
  sku          String   @unique
  title_en     String
  title_th     String
  description_en String @db.Text
  description_th String @db.Text
  category     String   // Primary category (kept for backward compatibility)
  supplier     String?  // Brand/supplier name
  images       Json     // Array of image URLs
  pdfs         Json     // Array of PDF URLs
  has_pricing  Boolean  @default(false)
  source_url   String?
  featured     Boolean  @default(false)
  active       Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Many-to-many relationship with categories
  categories   ProductCategory[]

  @@index([category])
  @@index([supplier])
  @@index([has_pricing])
  @@index([featured])
  @@index([active])
}

model Category {
  id            String   @id @default(cuid())
  name_en       String   @unique
  name_th       String
  slug          String   @unique
  description_en String? @db.Text
  description_th String? @db.Text
  product_count Int      @default(0)
  active        Boolean  @default(true)
  parent_id     String?  // For hierarchical categories (parent-child relationship)
  order         Int      @default(0) // Display order
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Parent-child relationship
  parent        Category?  @relation("CategoryParent", fields: [parent_id], references: [id], onDelete: Cascade)
  children      Category[] @relation("CategoryParent")

  // Many-to-many relationship with products
  products      ProductCategory[]

  @@index([parent_id])
}

model ProductCategory {
  id          String   @id @default(cuid())
  product_id  String
  category_id String
  is_primary  Boolean  @default(false)  // Mark the primary category
  createdAt   DateTime @default(now())

  product     Product  @relation(fields: [product_id], references: [id], onDelete: Cascade)
  category    Category @relation(fields: [category_id], references: [id], onDelete: Cascade)

  @@unique([product_id, category_id])
  @@index([product_id])
  @@index([category_id])
}

model ContactInquiry {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  company   String?
  subject   String
  message   String   @db.Text
  product_sku String?
  language  String   @default("en")
  status    String   @default("new") // new, replied, closed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}

model CartItem {
  id          String   @id @default(cuid())
  session_id  String
  product_sku String
  quantity    Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([session_id, product_sku])
  @@index([session_id])
}

model NewsletterSubscriber {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  subscribed_at DateTime @default(now())
  active        Boolean  @default(true)

  @@index([email])
}

model ProductReview {
  id            String   @id @default(cuid())
  product_sku   String
  customer_name String
  customer_email String?
  rating        Int      // 1-5
  title         String
  comment       String   @db.Text
  language      String   @default("en")
  approved      Boolean  @default(false)
  createdAt     DateTime @default(now())

  @@index([product_sku])
  @@index([approved])
}

model BlogPost {
  id              String   @id @default(cuid())
  slug            String   @unique
  title_en        String
  title_th        String
  excerpt_en      String   @db.Text  // Short summary
  excerpt_th      String   @db.Text
  content_en      String   @db.Text  // Full blog content
  content_th      String   @db.Text
  author          String   @default("Placid Asia")
  featured_image  String?  // URL to featured image
  category        String   // Product Highlight, Technical Article, Case Study, etc.
  tags            Json     @default("[]") // Array of tags
  seo_keywords    String?  @db.Text
  reading_time    Int      @default(5) // Minutes to read
  published       Boolean  @default(false)
  published_at    DateTime?
  views           Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([published])
  @@index([category])
  @@index([published_at])
}